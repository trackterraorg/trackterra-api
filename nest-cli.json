{
  "collection": "@nestjs/schematics",
  "sourceRoot": "app/src",
  "monorepo": true,
  "root": "app",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "app/tsconfig.app.json",
    "assets": [
      {
        "include": "**/*.graphql"
      },
      {
        "include": "config/*.yml"
      },
      {
        "include": "**/*.yaml"
      },
      {
        "include": "**/*.conf"
      },
      {
        "include": "**/*.proto"
      },
      {
        "include": "*.proto"
      },
      {
        "include": "*.conf"
      }
    ],
    "watchAssets": true
  },
  "projects": {
    "core": {
      "type": "library",
      "root": "libs/core",
      "entryFile": "index",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "repository": {
      "type": "library",
      "root": "libs/repository",
      "entryFile": "index",
      "sourceRoot": "libs/repository/src",
      "compilerOptions": {
        "tsConfigPath": "libs/repository/tsconfig.lib.json"
      }
    },
    "repo-orm": {
      "type": "library",
      "root": "libs/repo-orm",
      "entryFile": "index",
      "sourceRoot": "libs/repo-orm/src",
      "compilerOptions": {
        "tsConfigPath": "libs/repo-orm/tsconfig.lib.json"
      }
    },
    "contracts": {
      "type": "library",
      "root": "libs/contracts",
      "entryFile": "index",
      "sourceRoot": "libs/contracts/src",
      "compilerOptions": {
        "tsConfigPath": "libs/contracts/tsconfig.lib.json"
      }
    },
    "parser": {
      "type": "library",
      "root": "libs/parser",
      "entryFile": "index",
      "sourceRoot": "libs/parser/src",
      "compilerOptions": {
        "tsConfigPath": "libs/parser/tsconfig.lib.json"
      }
    },
    "tax-apps": {
      "type": "library",
      "root": "libs/tax-apps",
      "entryFile": "index",
      "sourceRoot": "libs/tax-apps/src",
      "compilerOptions": {
        "tsConfigPath": "libs/tax-apps/tsconfig.lib.json"
      }
    },
    "proto-schema": {
      "type": "library",
      "root": "libs/proto-schema",
      "entryFile": "index",
      "sourceRoot": "libs/proto-schema/src",
      "compilerOptions": {
        "tsConfigPath": "libs/proto-schema/tsconfig.lib.json"
      }
    },
    "app": {
      "type": "application",
      "root": "app",
      "entryFile": "main",
      "sourceRoot": "app/src",
      "compilerOptions": {
        "tsConfigPath": "app/tsconfig.app.json"
      }
    }
  }
}
